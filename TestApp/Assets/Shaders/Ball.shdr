
@VERTEX_SHADER
#version 330 core
layout (location = 0) in vec3 pos;

uniform mat4 world;
uniform mat4 view;
out vec2 uv;

@IMPORT lerp
void main()
{
    uv = pos.xy;
    gl_Position = view * world * vec4(pos, 1.0);
}
@END

@FRAGMENT_SHADER
#version 330 core
in vec2 uv;

uniform vec3 color;
uniform sampler2D tex;
out vec4 FragColor;

void main()
{
    vec4 texCol = texture(tex, uv);
    FragColor = texCol;
}
@END